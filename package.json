{
  "name": "creative",
  "version": "0.1.0-alpha.0",
  "description": "A personal blogging theme for Ghost, inspired by Casper.",
  "keywords": [
    "creative",
    "ghost-theme",
    "ghost",
    "theme",
    "zce"
  ],
  "homepage": "https://github.com/zce/creative#readme",
  "bugs": {
    "email": "w@zce.me",
    "url": "https://github.com/zce/creative/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zce/creative.git"
  },
  "license": "MIT",
  "author": {
    "name": "zce",
    "email": "w@zce.me",
    "url": "https://zce.me"
  },
  "scripts": {
    "lint:js": "standard assets/js/*.js gulpfile.js",
    "lint:scss": "csscomb -c assets/scss/.csscomb.json assets/scss",
    "lint": "yarn lint:js && yarn lint:scss",
    "test": "yarn lint && gscan .",
    "build": "gulp build",
    "release": "gulp release --production",
    "dev": "gulp develop"
  },
  "config": {
    "posts_per_page": 6,
    "meta_robots": "noindex, nofollow",
    "disqus_shortname": "zce-sandbox",
    "socials": {
      "weibo": "zceme",
      "github": "zce"
    }
  },
  "dependencies": {
    "bootstrap": "^4.2.1",
    "open-color": "^1.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "autoprefixer": "^9.4.4",
    "css-mqpacker": "^7.0.0",
    "csscomb": "^4.2.0",
    "cssnano": "^4.1.8",
    "del": "^3.0.0",
    "gscan": "^2.2.1",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-header": "^2.0.7",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^5.0.3",
    "gulp-livereload": "^4.0.1",
    "gulp-load-plugins": "^1.5.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-uglify": "^3.0.1",
    "gulp-zip": "^4.2.0",
    "standard": "^12.0.1"
  },
  "engines": {
    "ghost": ">=2.10.0",
    "ghost-api": "v0.1"
  },
  "demo": "https://creative.zce.me",
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Personal Blogs"
    ]
  },
  "screenshots": {
    "desktop": "screenshot-desktop.jpg",
    "mobile": "screenshot-mobile.jpg"
  }
