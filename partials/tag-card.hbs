<section class="tag-card"{{#if feature_image}} style="background-image: url({{feature_image}})"{{else if @blog.cover_image}} style="background-image: url({{@blog.cover_image}})"{{/if}}>
  <small class="tag-card-subtitle">{{@blog.title}}</small>
  <h3 class="tag-card-title"><a href="{{url}}">{{name}}</a></h3>
  <div class="tag-card-divider">{{> svgs/activity size=50 stroke=1}}</div>
  {{#get 'posts' filter='tags:{{slug}}+id:-{{skip}}' limit=3 as |related_posts|}}
  {{#if related_posts}}
  <ul class="tag-card-list">
    {{#foreach related_posts}}
    <li><a href="{{url}}">{{title}}</a></li>
    {{/foreach}}
  </ul>
  <footer class="tag-card-footer">
    <a href="{{#../this}}{{url}}{{/../this}}">{{plural pagination.total empty=(t 'No posts') singular=(t '% post') plural=(t '% posts')}} &rarr;</a>
  </footer>
  {{/if}}
  {{/get}}
</section>